#gallery
  padding 16px 0
  display flex
  flex-wrap wrap
  -webkit-box-pack start
  justify-content flex-start
  margin -8px
  -webkit-box-align stretch
  align-items stretch

  .gallery-item
    overflow hidden
    border var(--style-border-always)
    border-radius 12px
    position relative
    float left
    display flex
    height 250px
    width calc(100% / 3 - 16px)
    cursor pointer
    margin 8px
    +maxWidth1200()
      width calc(100% / 2 - 16px)

    +maxWidth768()
      width 100%

    &:hover
      .cover
        filter brightness(0.5) blur(2px)
        transition all .3s

      .title::after
        width 100%
        transition all .3s

      .desc
        left 10%
        transition left .35s
        text-wrap unset

    .cover
      width 100%
      object-fit cover
      transition all 0.3s

    .title
      position absolute
      top 10%
      left 10%
      font-weight 700
      font-size 32px
      color var(--sco-white)

      &::after
        top 55px
        width 0
        left 0
        height 3px
        background var(--sco-white)
        content ""
        border-radius 1px
        position absolute
        transition all .3s

    .desc
      position absolute
      top 35%
      left 100%
      width 80%
      color var(--sco-white)
      font-size 1.1em
      transition left .35s
      letter-spacing 1px
      text-wrap break-word

#album
  margin 5px auto

  .locate
    display flex
    position absolute
    left 8px
    top 8px
    padding 4px 6px
    border-radius 8px
    background var(--sco-black-op)
    font-size 12px
    color var(--sco-white)
    transition .3s
    z-index 1
    user-select none

  .sco-gallery-item
    margin-bottom 24px
    overflow hidden
    border-radius 8px
    transition all .3s
    border var(--style-border-always)

  .sco-gallery-image
    width 100%
    display block
    height auto