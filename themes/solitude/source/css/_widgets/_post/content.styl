#article-container
  overflow-wrap break-word

  .table-wrap
    margin 1rem 0
    border-radius 8px
    overflow-x scroll

  .headerlink
    float right
    opacity .08
    position relative
    padding 0
    border none
    border-radius 8px
    line-height 1
    font-size .8rem

    #page &
      display none

    &::before
      content "\e082"
      font-family scoicon
      cursor pointer

    &:hover
      opacity 1

      &::before
        color var(--sco-main)

  p
    font-size .9rem
    line-height 1.7
    font-weight 400
    margin 1rem 0
    text-align left
    letter-spacing .6px

    img
      margin auto

  code
    color var(--sco-white)
    padding 0.2rem 0.4rem
    border-radius 4px
    margin 0 4px
    background var(--sco-pink)
    line-height 2
    box-shadow var(--sco-shadow-border)

  img
    cursor zoom-in
    border-radius 12px
    object-fit cover
    display block
    margin 0.8rem auto
    max-width 90%
    max-height 450px

  a
    border-bottom 2px dotted var(--sco-lighttext)
    color var(--sco-fontcolor)
    font-weight 700
    padding 0 4px
    border-radius 4px 4px 0 0

    if hexo-config('fancybox')
      &.fancybox
        border-bottom 0
        padding 0
        margin auto
        display contents
        width fit-content
        -webkit-user-select none

    &:not(.headerlink):hover
      border 0
      text-decoration none
      background var(--sco-main)
      color var(--sco-white)
      border-radius 4px

  ul, ol
    padding 0
    margin-top 0.4rem
    list-style none
    counter-reset li 0

    li
      &:before
        position absolute
        top 0
        left 0
        color var(--sco-fontcolor)
        transition all .3s ease-out 0s
        background var(--sco-lighttext)

      &:not(.tab)
        position relative
        margin 0.2rem 0

  ul
    > li
      &:not(.tab)
        padding 0.2em 0.2em 0.2em 1.4em

        &:before
          margin 0
          top 0.78em
          width 0.42em
          height 0.42em
          border-radius 0.42em
          background 0 0
          content ""
          line-height .42em
          border 0.21em solid var(--sco-lighttext)
          background var(--sco-lighttext)

  ol
    > li:before
      margin-top .65em
      width 1.45em
      height 1.45em
      border-radius .725em
      text-align center
      font-size .85em
      color var(--sco-white)
      line-height 1.45em

    ul li
      line-height 1.7

    > li

      &:not(.tab)
        padding .2em .2em .2em 1.8em

      &:before
        content counter(li)
        counter-increment li 1

      > ol
        > li
          &:before
            content counter(li, lower-alpha)
            counter-increment li

          > ol
            > li
              &:before
                content counter(li, lower-roman)
                counter-increment li


  // 文章内容样式

  &.post-content
    h1, h2, h3, h4
      display flex
      align-items center
      justify-content space-between
      flex-direction row-reverse
      transition all .2s ease-out 0s

    h1
      font-size 1.5rem
      line-height 1.3

    h2
      font-size 1.3rem
      line-height 1.3
      border-top 1px dashed var(--sco-theme-op)
      padding-top 1.5rem

    h3
      font-size 1.1rem
      line-height 1.3

    h4
      font-size 1.1rem
      line-height 1.3